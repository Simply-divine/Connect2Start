<% obj.each do |article| %>
	<div class = "card card-list w-75 offset-1 ">
		<div class ="card-header" > <%= link_to article.title, article_path(article) %>
		 <h6 class = "card-subttle mb-2 text-muted article-user-specs"> Created by <%= article.user.fname if article.user %> 
			<%= time_ago_in_words(article.created_at) %> ago, 
			Updated <%= time_ago_in_words(article.updated_at) %> ago
		</h6>
			<div class = "card-subttle mb-2 offset-9 ">
			<% if article.categories.any? %>
				<p>Categories: <br><%=render article.categories%></p>
			<% end %>
			</div>
			
	</h6>
		</div>
		<div class = "card-body">
			<%= truncate(article.description,length: 100) %>
		</div>
		<%# <% if current_user == article.user || current_user.admin? %>
		<div class = "card-footer"> 
			<%= link_to "Chat with article author", talk_path(article.user.id), class: "btn btn-lg btn-primary" %>
			<% if current_user == article.user %>
			<%= link_to "Edit",edit_article_path(article),class: "btn btn-lg btn-primary"  %>
			<td> <%= link_to "delete",article_path(article),method: :delete,data: {confirm: 'Are you sure?'},class: "btn btn-danger btn-lg" %>
			<% end %>	
		</div>
	</div>
<% end %>